{
  "firestore": {
    "rules": ".firebase/firestore.rules",
    "indexes": ".firebae/firestore.indexes.json"
  },
  "storage": {
    "rules": ".firebase/storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
